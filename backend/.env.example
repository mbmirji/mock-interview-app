# ============================================
# Mock Interview API - Environment Variables
# ============================================

# Application Settings
# --------------------
APP_NAME="Mock Interview API"
DEBUG=true
ENVIRONMENT=development  # Options: development, staging, production
PORT=8000


# Database Configuration (Supabase PostgreSQL)
# --------------------------------------------
# Local development:
DATABASE_URL=postgresql://user:password@localhost:5432/mock_interview_db

# Supabase production (get from Supabase dashboard -> Settings -> Database):
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres


# Google Gemini Configuration
# -------------------
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash  # Options: gemini-1.5-flash, gpt-3.5-turbo


# File Upload Settings
# --------------------
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=[".pdf", ".doc", ".docx"]
